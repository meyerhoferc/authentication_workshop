<!DOCTYPE html>
<html>
  <head>
    <title>AuthenticationWorkshop</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class='success'>
      <%= flash[:success] %>
    </div>
    <div class='error'>
      <%= flash[:error] %>
    </div>
    <%= yield %>
  </body>
</html>
